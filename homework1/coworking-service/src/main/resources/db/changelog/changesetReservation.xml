<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="addForeignKeyReservation" author="Seemer">
        <addForeignKeyConstraint baseColumnNames="placeId" 
            baseTableName="Reservation"
            constraintName="fkPlaceReservationId"
            referencedColumnNames="placeId"
            referencedTableName="Place"/>
        <addForeignKeyConstraint baseColumnNames="clientLogin"
            baseTableName="Reservation"
            constraintName="fkReservationUser"
            referencedColumnNames="login"
            referencedTableName="User"/>
    </changeSet>
</databaseChangeLog>